# Navigation
alias ls='lsd -lh --group-directories-first --color=auto'

alias c='clear'

alias l='lsd -alh --group-directories-first'

alias du="du -h"

alias route='pwd | xclip -selection clipboard'

alias Bash='nvim ~/.bashrc'

alias RefreshBash="source /home/$USER/.bashrc"

alias Extract="tar -zxvf"

view()
{
    viewnior "$@" &
}

Search()
{
    history | grep "$@"
}
